/* pages/personal/personal.wxss */

page {
  display: block;
  min-height: 100%;
  background-color: #eee;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #4286f5;
}

.userinfo-img {
  width: 100%;
  height: 60rpx;
  padding-bottom: 6px;
  background: #fff;
}

.userinfo text {
  color: #fff;
  font-size: 30rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.my-cotenttop {
  margin-top: 10px;
}

.my-content {
  width: 92%;
  padding: 0% 4%;
  height: 38px;
  background: #fff;
  border-bottom: 1px solid #e2e2e3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.my-contentview {
  display: flex;
  align-items: center;
}

.my-content .fa {
  font-size: 50rpx;
  color: #00b90c;
  padding-right: 10px;
}

.my-text {
  font-size: 12px;
  color: #686868;
}

.my-text1 {
  font-size: 12px;
  color: #9b9b9b;
}

.my_img {
  width: 30rpx;
  height: 30rpx;
  padding-left: 10px;
}
.mycontent-img{
  width: 30rpx;
  height: 30rpx;
  padding-right: 10px;
}
